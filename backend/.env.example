# ================================================
# CONFIGURACIÓN - CENTRO DIAGNÓSTICO
# ================================================
# Copiar este archivo como .env y ajustar valores

# ================================================
# BASE DE DATOS
# ================================================
DATABASE_URL=postgresql://centro_user:tu_password_seguro@localhost:5432/centro_diagnostico

# ================================================
# SEGURIDAD
# ================================================
SECRET_KEY=cambia-este-secret-key-por-uno-aleatorio-muy-largo
JWT_SECRET_KEY=cambia-este-jwt-secret-por-otro-aleatorio

# ================================================
# RUTAS Y CARPETAS
# ================================================
UPLOAD_FOLDER=./uploads
EQUIPOS_EXPORT_PATH=/mnt/equipos/export

# Si los equipos exportan a una carpeta en red:
# EQUIPOS_EXPORT_PATH=//servidor-equipos/export

# ================================================
# REDIS (Para Celery)
# ================================================
REDIS_URL=redis://localhost:6379/0

# ================================================
# SINCRONIZACIÓN CON NUBE
# ================================================
CLOUD_SYNC_ENABLED=false
CLOUD_PROVIDER=aws

# AWS S3
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_S3_BUCKET=centro-diagnostico-resultados
AWS_REGION=us-east-1

# Azure Blob Storage (alternativa)
# AZURE_STORAGE_CONNECTION_STRING=tu_connection_string
# AZURE_CONTAINER_NAME=centro-diagnostico

# ================================================
# EMAIL (Notificaciones)
# ================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password

# ================================================
# ENTORNO
# ================================================
FLASK_ENV=development
# En producción cambiar a: production

# ================================================
# CONFIGURACIÓN REGIONAL (República Dominicana)
# ================================================
TIMEZONE=America/Santo_Domingo
LOCALE=es_DO

# ================================================
# CARACTERÍSTICAS OPCIONALES
# ================================================
# Activar/desactivar funcionalidades
ENABLE_WEB_SEARCH=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_CLOUD_BACKUP=false
